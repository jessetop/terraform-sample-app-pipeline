# terraform.tfvars.example - Copy to terraform.tfvars and customize

aws_region   = "us-east-1"
project_name = "esxi-migration"

# Networking options:
# Option 1: Create new VPC (default)
use_existing_vpc    = false
vpc_cidr            = "10.100.0.0/16"
staging_subnet_cidr = "10.100.1.0/24"

# Option 2: Use existing VPC (uncomment and set these)
# use_existing_vpc   = true
# existing_vpc_id    = "vpc-xxxxxxxxx"
# existing_subnet_id = "subnet-xxxxxxxxx"

# MGN Configuration
replication_server_instance_type = "t3.small"
use_public_ip_for_replication    = true  # Required without VPN
bandwidth_throttling             = 0      # 0 = unlimited, or set Mbps

# Encryption (leave empty for AWS managed key)
ebs_encryption_key_arn = ""

# Target instance defaults
target_instance_type = "t3.medium"
